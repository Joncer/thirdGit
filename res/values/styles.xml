<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="LoginStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    
	<!-- 用户名和密码标签的style -->
    <style name="login_label_style">
		<item name="android:textColor">#777777</item> 
		<item name="android:textSize">16sp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">25dp</item>
    </style>
    
    <!-- 登录按钮的style -->
    <style name="btn_login_style">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 忘记密码和注册账号的style -->
    <style name="login_link_style">
        <item name="android:textColor">#3C5D86</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>
    
    <style name="text_18_ffffff">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text_20_ffffff">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="text_10_gray">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="text_10_black">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="text_25_black">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
